    "static-import",
    "dynamic-import"
  ],
  "author": "Tom Jenkinson <tom@tjenkinson.me>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tjenkinson/rollup-plugin-bundle-guard/issues"
  },
  "homepage": "https://github.com/tjenkinson/rollup-plugin-bundle-guard#readme",
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier"
    }
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "husky": "^4.0.2",
    "jest": "^29.5.0",
    "prettier": "^2.0.2",
    "rollup": "^2.0.0"
  }
